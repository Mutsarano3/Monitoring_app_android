<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".supervision.Configuration"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorSiemens">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuration Automate"
            android:textSize="33dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textColor="#FFF"
            android:fontFamily="monospace"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/config"
            android:layout_marginTop="105dp"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adresse IP :"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/adresse_ip"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rack :"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginTop="22dp"/>
    <EditText
        android:id="@+id/rack"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slot :"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginTop="22dp"/>
    <EditText
        android:id="@+id/slot"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DataBloc :"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginTop="22dp"/>
    <EditText
        android:id="@+id/db"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="number"/>


    <Button
        android:background="@drawable/btnmenu"
        android:textColor="@color/colorWhite"
        android:id="@+id/config"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="150dp"
        android:text="Enregistrer" />

    <TextView
        android:id="@+id/error_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Erreur tout les champs doivent Ãªtre remplis !"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorError"
        android:visibility="gone"/>





</LinearLayout>
</ScrollView>