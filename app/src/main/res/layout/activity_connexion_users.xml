<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".connection.Connexion_users">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorSiemens">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion utilisateurs"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#FFF"
        android:layout_marginTop="30dp"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/infos"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            />
    </FrameLayout>

    <TextView
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email : "
        android:textSize="15dp"
        android:textColor="#000"
        android:textStyle="italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/connexion_users_mail"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mot de passe :"
        android:textColor="#000"
        android:textStyle="italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:id="@+id/connexion_users_password"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/txt_error_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Erreur de connexion"
        android:textColor="@color/colorError"
        android:gravity="center"
        android:visibility="gone"/>

    <Button
        android:background="@drawable/btnmenu"
        android:textColor="@color/colorWhite"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/valide_users"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Connexion"/>


</LinearLayout>